{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "target":"ES2018",
        "outDir": "out",
        "lib": [
            "ES2018",
            "ESNext.AsyncIterable"
        ],
        "moduleResolution": "node",
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "clients/discord/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}